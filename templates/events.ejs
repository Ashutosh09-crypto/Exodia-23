<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Exodia | Events</title>

    <!-- cdn for css of bootstrap -->
    <link rel="stylesheet" href="/css/navbar.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/events.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
</head>

<body>

    <!-- importing navbar from the partials -->

    <nav class="navbar">
        <div class="navbar-container container">
            <input type="checkbox" name="" id="">
            <div class="hamburger-lines">
                <span class="line line1"></span>
                <span class="line line2"></span>
                <span class="line line3"></span>
            </div>
            <ul class="menu-items">
                <li><a href="/">Home</a></li>
                <li><a href="/#about-us">About</a></li>
                <li><a href="/events">Events</a></li>
                <li><a href="/profile">Profile</a></li>
                <li><a href="/#contact-us">Contact</a></li>
                <li><a href="/events/joinTeam">JoinTeam</a></li>
                <li><a id="map-btn">Map</a></li>
            </ul>
            <h1 class="logo">Events</h1>
        </div>
    </nav>

    <!-- importing all the clipaths -->
    <%- include('partials/clip_path_svgs.ejs') %>

        <img src="https://media2.giphy.com/media/dCM60S7zcatpm8lTvB/giphy.gif" class="hidden" id="pokemon"
            data-aos="fade-left" data-aos-easing="linear" data-aos-duration="400">



        <div class="map-wrapper">
            <div class="small-description">

                <br>
                Island (Club) : UDC
                <br>
                Treasure (Event) : SIUUUU
            </div>


            <!-- map code started -->
            <div class="map">

                <!-- map img -->
                <img src=" /images/navigation-map.jpeg" class='map-img' data-aos="fade" data-aos-easing="linear"
                    data-aos-duration="500">



                <!-- box of each event  -->
                <%let k=1;%>

                    <%for(let cat in events_cat) {%>

                        <div class="grid-box">
                            <div class="grid-list">


                                <!-- markers code started -->
                                <% for(let i=0;i<events_cat[cat].length;i++) {%>
                                    <span id="<%=k++%>" class="map-mark" style="font-size: 3px;">

                                        <p style="display: none;">Club : <%= cat %>,
                                                Event : <%= events_cat[cat][i].name%>
                                        </p>

                                        <i class="fa fa-close" style="color:white"></i>
                                    </span>

                                    <%}%>
                                        <!-- marker code ends -->
                            </div>
                        </div>

                        <!-- box ended -->


                        <%}%>



            </div>

        </div>


        <!-- map codes ended -->


        <!-- image crousel  -->


        <div class="css-slider-wrapper">

            <!-- spwanning input radios for all events -->
            <% k=1;%>
                <%for(let cat in events_cat) {%>


                    <% for(let i=0;i<events_cat[cat].length;i++) {%>
                        <% if(k===1) {%>
                            <input type="radio" name="slider" class="gif slide-radio<%=`${k}`%>" checked
                                id="slider_<%=`${k++}`%>">
                            <%}else{%>
                                <input type="radio" name="slider" class="gif slide-radio<%=`${k}`%>"
                                    id="slider_<%=`${k++}`%>">
                                <%}%>

                                    <%}%>

                                        <%}%>
                                            <!-- spwanning input ends -->






                                            <!-- page for event code starts -->
                                            <%k=1;%>
                                                <%for(let cat in events_cat) {%>


                                                    <% for(let i=0;i<events_cat[cat].length;i++) {%>
                                                        <div class="slider slide<%=`${k}`%>">

                                                            <div class="event-wrapper">

                                                                <!-- check if k > 1 -->

                                                                <% if(k> 1) {%>
                                                                    <label for="slider_<%=`${k-1}`%>"
                                                                        class="gif numb<%=`${k-1}`%> previous float-right"><i
                                                                            class="arrow-right"><%-
                                                                                include("partials/arrow_svg.ejs")%></i></label>
                                                                    <%}%>

                                                                        <div class="inner-page">

                                                                            <div class="heading-wrapper">
                                                                                <div class="upper-heading"></div>
                                                                                <h2>
                                                                                    <%=events_cat[cat][i].name%>
                                                                                </h2>
                                                                                <div class="lower-heading"></div>
                                                                            </div>

                                                                            <div class="content-wrapper">



                                                                                <h5>RuleBook: </h5>

                                                                                <h5>Registration Fees: </h5>

                                                                                <p>CLUB : <%=cat %>
                                                                                </p>

                                                                                <a
                                                                                    href="/events/createTeam?event=<%=events_cat[cat][i].name%>">Register
                                                                                    Now</a>
                                                                            </div>
                                                                        </div>

                                                                        <% if(k < 33) {%>
                                                                            <label for="slider_<%=`${k+1}`%>"
                                                                                class="gif next numb<%=`${k+1}`%> float-left"><i
                                                                                    class="arrow-left"><%-
                                                                                        include("partials/arrow_svg.ejs")%></i></label>
                                                                            <%}%>

                                                                                <% k++ %>
                                                            </div>

                                                        </div>
                                                        <%}%>
                                                            <%}%>

        </div>


        <div id="bottom-footer">
        </div>

        <!-- // adding cloud animation  -->

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

        <script src="/js/events.js"></script>
        <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
        <script>
            AOS.init();
        </script>
</body>

</html>