<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Exodia | Events</title>

    <!-- cdn for css of bootstrap -->
    <link rel="stylesheet" href="/css/navbar.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/events.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/scrollbar.css">
    <link rel="icon" type="image/x-icon" href="/images/exodia_logo.png">
</head>

<body>

    <!-- importing navbar from the partials -->

    <nav class="navbar">
        <div class="navbar-container container">
            <input type="checkbox" name="" id="nav-btn">
            <div class="hamburger-lines">
                <span class="line line1"></span>
                <span class="line line2"></span>
                <span class="line line3"></span>
            </div>
            <ul class="menu-items">
                <li><a href="/">Home</a></li>
                <li><a href="/#about-us">About</a></li>
                <li><a href="/events">Events</a></li>
                <li><a href="/profile">Profile</a></li>
                <li><a href="/#contact-us">Contact</a></li>
                <li><a href="/events/joinTeam">JoinTeam</a></li>
                <li><a id="map-btn">Map</a></li>
            </ul>
            <h1 class="logo" style="top:17px">Events</h1>
        </div>
    </nav>

    <!-- importing all the clipaths -->
    <%- include('partials/clip_path_svgs.ejs') %>

        <img src="/images/shipppp.gif" class="hidden" id="pokemon">



        <div class="map-wrapper">
            <div class="small-description">

                <br>
                Island (Club) : UDC
                <br>
                Treasure (Event) : SIUUUU
            </div>


            <!-- map code started -->
            <div class="newmap row">

                <!-- box of each event  -->
                <% k=1;k2=1%>
                    <%for(let cat in events_cat) {%>

                        <div class="cc col-xs-12 col-sm-6 col-md-4">
                            <!-- Card -->
                            <div class="card" id="<%=`${k}`%>">
                          
                              <!--Card image-->
                              <div class="view overlay">
                                <img class="card-img-top" id="img_<%=`${k2}`%>" src="<%= event_pic(k2) %>" alt="Card image cap">
                              </div>
                              <h4 class="cardhead"> <%=cat%> </h4>
                              
                            </div>
                            <!-- Card -->
                            </div>

                        <% k+= events_cat[cat].length;
                           k2++;
                         %>

                    <%}%>



            </div>

        </div>


        <!-- map codes ended -->


        <!-- image crousel  -->


        <div class="css-slider-wrapper">

            <!-- spwanning input radios for all events -->
            <% k=1;%>
                <%for(let cat in events_cat) {%>


                    <% for(let i=0;i<events_cat[cat].length;i++) {%>
                        <% if(k===1) {%>
                            <input type="radio" name="slider" class="gif slide-radio<%=`${k}`%>" checked
                                id="slider_<%=`${k++}`%>">
                            <%}else{%>
                                <input type="radio" name="slider" class="gif slide-radio<%=`${k}`%>"
                                    id="slider_<%=`${k++}`%>">
                                <%}%>

                                    <%}%>

                                        <%}%>
                                            <!-- spwanning input ends -->






                                            <!-- page for event code starts -->
                                            <%k=1;%>
                                                <%for(let cat in events_cat) {%>

                                                    <%k2= 1%>
                                                    <% for(let i=0;i<events_cat[cat].length;i++) {%>
                                                        <div class="slider slide<%=`${k}`%>">

                                                            <div class="event-wrapper">

                                                                <!-- check if k > 1 -->

                                                                <% if(k2 > 1) {%>
                                                                    <label for="slider_<%=`${k-1}`%>"
                                                                        class="gif numb<%=`${k-1}`%> previous float-right"><i
                                                                            class="arrow-right"><%-
                                                                                include("partials/arrow_svg.ejs")%></i></label>
                                                                    <%}%>

                                                                        <div class="inner-page">

                                                                            <div class="heading-wrapper">
                                                                                <div class="upper-heading"></div>
                                                                                <h2>
                                                                                    <%=events_cat[cat][i].name%>
                                                                                    
                                                                                </h2>
                                                                                <div class="lower-heading"></div>
                                                                            </div>

                                                                            <div class="content-wrapper">


                                                                               <% var str = (events_cat[cat][i].name).toUpperCase().split("(")[0];
                                                                               
                                                                                    if(str[str.length-1]==' ') str = str.substring(0,str.length-1);
                                                                                %>
                                                                               <a href="./rulebooks/<%= str %>.pdf"> <h5>RuleBook: </h5> </a>

                                                                                <h5>Registration Fees - <%=events_cat[cat][i].fees%></h5>

                                                                                <p>CLUB : <%=cat %>
                                                                                </p>

                                                                                <a
                                                                                    href="/events/createTeam?event=<%=events_cat[cat][i].name%>">Register
                                                                                    Now</a>
                                                                                <div class="content-disc">
                                                                                    <p> <%=(events_cat[cat][i].content)%> </p>
                                                                                </div>
                                                                                
                                                                            </div>
                                                                        
                                                                        </div>

                                                                        <% if(k2 < events_cat[cat].length) {%>
                                                                            <label for="slider_<%=`${k+1}`%>"
                                                                                class="gif next numb<%=`${k+1}`%> float-left"><i
                                                                                    class="arrow-left"><%-
                                                                                        include("partials/arrow_svg.ejs")%></i></label>
                                                                            <%}%>

                                                                                <% k++ %>
                                                            </div>

                                                        </div>
                                                        <%k2++%>
                                                        <%}%>
                                                            <%}%>

        </div>


        <div id="bottom-footer">
        </div>

        <!-- // adding cloud animation  -->

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"
            integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>

        <script src="/js/events.js"></script>
        <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
        <script>
            AOS.init();
        </script>

        <script src="/js/navbar.js"></script>
</body>

</html>